%h1= @movie.title
.jumbotron
  = @movie.description
- if user_signed_in?
  %p= link_to 'Email me details about this movie', send_info_movie_path(@movie), class: 'btn btn-sm btn-default'


%hr

.col-md-12
  = form_for [@movie, @comment], html: { class: 'form-horizontal', role: 'form' } do |f|

    .form-group
      .control-label.col-md-2
        = f.label :content, 'New Comment'
      .col-md-10
        = f.text_area :content, rows: 10, class: 'form-control', placeholder: 'Put your comment here'

    .form-group
      .col-md-offset-2.col-md-10
        = f.submit 'Add Comment', class: 'btn btn-primary btn-lg pull-right'

.col-md-12
  %header
    %h2.text-center Comments
  .col-md-10
    - if @comments.any?
      - saved_comments(@comments).each do |comment|
        .well
          %p
            %strong= comment.content
          %p
            = time_ago_in_words(comment.created_at)
            ago by
            = comment.user.name
          - if comment.user == current_user
            = link_to 'Delete', [comment.movie, comment],
                                method: :delete,
                                data: { confirm: 'Are you sure?' }

    - if @comments.count == 0 # else didn't work here
      %h3 No comments yet. Place your first comment.

